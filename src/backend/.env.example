# Development Environment Variables
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://admin:admin123@localhost:27017/devopsify-ecommerce?authSource=admin
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-use-long-random-string
JWT_EXPIRE=7d

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Email Configuration (for future features)
EMAIL_SERVICE=gmail
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Cloud Storage (for future features)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=devopsify-uploads

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_LOGGING=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# API Keys (for future integrations)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
